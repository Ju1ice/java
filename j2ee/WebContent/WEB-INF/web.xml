<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>j2ee</display-name>

	<!-- please, instantiate my servlet for me -->
	<servlet>
		<servlet-name>dan</servlet-name>
		<servlet-class>com.skillstorm.servlet.HelloServlet</servlet-class>
	</servlet>
	
	<!-- any request for url /hello.. send to dan (post,put,get..) -->
	<servlet-mapping>
		<servlet-name>dan</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	

</web-app>
